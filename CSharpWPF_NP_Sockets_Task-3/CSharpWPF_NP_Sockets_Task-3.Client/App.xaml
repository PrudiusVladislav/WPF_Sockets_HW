<Application x:Class="CSharpWPF_NP_Sockets_Task_3.Client.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:CSharpWPF_NP_Sockets_Task_3.Client"
             xmlns:viewModels="clr-namespace:CSharpWPF_NP_Sockets_Task_3.Client.ViewModels"
             xmlns:views="clr-namespace:CSharpWPF_NP_Sockets_Task_3.Client.Views"
             StartupUri="/Views/MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <DataTemplate DataType="{x:Type viewModels:ConnectionSettingsViewModel}">
                <views:ConnectionSettingsView/>
            </DataTemplate>
            <DataTemplate DataType="{x:Type viewModels:ChatViewModel}">
                <views:ChatView/>
            </DataTemplate>
        </ResourceDictionary>
    </Application.Resources>
</Application>
